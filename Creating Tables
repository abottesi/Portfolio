CREATE TABLE SALES_CUSTOMER (
	CUS_CODE NVARCHAR(5),
	CUS_LNAME NVARCHAR(10),
	CUS_FNAME NVARCHAR(10),
	CUS_INITIAL NVARCHAR(1),
	CUS_AREACODE NVARCHAR(3),
	CUS_PHONE NVARCHAR(8),
	CUS_BALANCE DECIMAL(8,2),
	PRIMARY KEY (CUS_CODE)
);

CREATE TABLE SALES_INVOICE (
	INV_NUMBER NVARCHAR(4),
	CUS_CODE NVARCHAR(5),
	INV_DATE DATE,
	PRIMARY KEY (INV_NUMBER)
);

CREATE TABLE SALES_LINE (
	INV_NUMBER NVARCHAR(4),
	LINE_NUMBER NVARCHAR(2),
	P_CODE NVARCHAR(10),
	LINE_UNITES SMALLINT,
	LINE_PRICE DECIMAL(6,2),
	PRIMARY KEY (INV_NUMBER, LINE_NUMBER)
);

CREATE TABLE SALES_PRODUCT (
	P_CODE NVARCHAR(10),
	P_DESCRIPT NVARCHAR(50),
	P_INDATE DATE,
	P_QOH SMALLINT,
	P_MIN SMALLINT,
	P_PRICE DECIMAL(6,2),
	P_DISCOUNT DECIMAL(3,2),
	V_CODE NVARCHAR(5),
	PRIMARY KEY (P_CODE)
);

CREATE TABLE SALES_VENDOR (
	V_CODE NVARCHAR(5),
	V_NAME NVARCHAR(20),
	V_CONCAT NVARCHAR(20),
	V_AREACODE NVARCHAR(3),
	V_PHONE NVARCHAR(8),
	V_STATE NVARCHAR(2),
	V_ORDER NVARCHAR(1),
	PRIMARY KEY (V_CODE)
);
